@page
@model PlayerBank.Pages_Athletes.AddAthleteModel

@{
    ViewData["Title"] = "Add Athlete";
}
<h1>Create</h1>

<h4>Add Athlete</h4>
<hr />
<form method="post">
    <div class="row mb-3">
        <div class="col-4">
            <label asp-for="Athlete.FirstName" class="form-label"></label>
            <input asp-for="Athlete.FirstName" class="form-control">
            <span asp-validation-for="Athlete.FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-4">
            <label asp-for="Athlete.LastName" class="form-label"></label>
            <input asp-for="Athlete.LastName" class="form-control"></textarea>
            <span asp-validation-for="Athlete.LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-4">
            <label asp-for="Athlete.Sport" class="form-label"></label>
            <input asp-for="Athlete.Sport" class="form-control"></textarea>
            <span asp-validation-for="Athlete.Sport" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
    <div class="col-4">
        <label asp-for="Athlete.CollegeID" class="control-label"></label>
        <select asp-for="Athlete.CollegeID" asp-items="Model.CollegesDropDown" class="form-select">
            <option value="">Choose...</option>
        </select>
        <span asp-validation-for="Athlete.CollegeID" class="text-danger"></span>
    </div>
</div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}