@page
@model PlayerBank.Pages_Athletes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>PlayerBank</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Athlete[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Athlete[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Athlete[0].Sport)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Athlete[0].College)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Athlete) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.College.CollegeName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.AthleteID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.AthleteID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.AthleteID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
